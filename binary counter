int count=0;

int newcount; void setup()
//sets up the id's for the pins and their functions, noting pin 5 as the pin for the button and pin 6-9 as output pins
{ Serial.begin(9600); pinMode(5,INPUT);

pinMode(6,OUTPUT);
pinMode(7,OUTPUT);
pinMode(8,OUTPUT);
pinMode(9,OUTPUT);
}
void loop()
{
if(digitalRead(5)==HIGH)
{
// adds one to the counter, turning on one of the leds
newcount=count+1;
if(newcount!=count)
{
delay(500);
switch (newcount)
{
//this segment is telling the arduino what pins to turn on to provide power to leds with each button push
case 1: digitalWrite(6,HIGH);
break;
case 2: 
digitalWrite(7,HIGH);
digitalWrite (6,LOW);
break;
case 3: 
digitalWrite(6, HIGH);
digitalWrite(7, HIGH);
break;
case 4: 
digitalWrite(8,HIGH);
digitalWrite(6,LOW);
digitalWrite(7, LOW);
break;
case 5:
digitalWrite(6, HIGH);
digitalWrite(7, LOW);
digitalWrite(8, HIGH);
break;
case 6:
digitalWrite(8,HIGH);
digitalWrite(7,HIGH);
digitalWrite(6,LOW);
break;
case 7:
digitalWrite(8,HIGH);
digitalWrite(7,HIGH);
digitalWrite(6,HIGH);
break;
case 8:
digitalWrite(9,HIGH);
digitalWrite(8,LOW);
digitalWrite(7,LOW);
digitalWrite(6,LOW);
break;
case 9;
digitalWrite(9,HIGH);
digitalWrite(6,HIGH);
break;
case 10;
digitalWrite(9,HIGH);
digitalWrite(7,HIGH);
digitalWrite(6,LOW);
break;
case 11;
digitalWrite(9,HIGH);
digitalWrite(7,HIGH);
digitalWrite(6,HIGH);
break;
case 12;
digitalWrite(9,HIGH);
digitalWrite(8,HIGH);
digitalWrite(7,LOW);
digitalWrite(6,LOW);
break;
case 13;
digitalWrite(9,HIGH);
digitalWrite(8,HIGH);
digitalWrite(6,HIGH);
break;
case 14;
digitalWrite(9,HIGH);
digitalWrite(8,HIGH);
digitalWrite(7,HIGH);
digitalWrite(6,LOW);
break;
case 15;                                
digitalWrite(9,HIGH);
digitalWrite(8,HIGH);
digitalWrite(7,HIGH);
digitalWrite(6,HIGH);
break;
// this part just lets the arduino know that it should be ilding with no leds turned on
default: 
digitalWrite(6,LOW);
digitalWrite(7,LOW);
digitalWrite(8,LOW);
digitalWrite(9,LOW);
newcount=0;
break;
}
Serial.println(newcount);
count=newcount;

}

}

}
